{
    "Verbosity": {
      "level": 2
    },
    "Dataset": {
      "name": "LJdataset",
      "format": "XYZ",
      "node_features": {
        "name": ["atom_type", "chirality"],
        "dim": [118, 3],
        "column_index": [0, 1]
      }
    },
    "NeuralNetwork": {
      "Architecture": {
        "model_type": "CHIRAL",
        "max_neighbours": 5,
        "radius": 10,
        "int_emb_size": 32,
        "out_emb_size": 16,
        "basis_emb_size": 8,
        "num_before_skip": 1,
        "num_after_skip": 1,
        "envelope_exponent": 5,
        "num_radial": 5,
        "input_dim": 118,
        "hidden_dim": 118,
        "num_conv_layers": 4,
        "output_heads": {
          "node": {
            "num_headlayers": 2,
            "dim_headlayers": [60,20],
            "type": "mlp"
          }
        },
        "task_weights": [1]
      },
      "Variables_of_interest": {
        "input_node_features": [0],
        "output_names": ["chirality"],
        "type": ["node"],
        "output_index": [1],
        "output_dim": [3]
      },
      "Training": {
        "num_epoch": 200,
        "perc_train": 0.7,
        "batch_size": 256,
        "patience": 20,
        "early_stopping": true,
        "Optimizer": {
          "type": "Adam",
          "learning_rate": 0.0005
        },
        "conv_checkpointing": false
      }
    },
    "Visualization": {
      "plot_init_solution": true,
      "plot_hist_solution": true,
      "create_plots": true
   }
}